---
const { overskrift, billede, id } = Astro.props;
---

<div id=`${id}`>
  <h2>{overskrift}</h2>
  <img src={billede} alt="girl" />
</div>

<style>
  div {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    align-items: center;
    scroll-margin-top: 5vw;
  }

  img {
    width: 100%;
    height: auto;
    aspect-ratio: 4/1;
    object-fit: cover;
    grid-column: 1/2;
    grid-row: 1/2;
    filter: brightness(50%);
    z-index: -1;
  }

  h2 {
    font-family: "Playfair Display", serif;
    font-size: 8vw;
    color: var(--primary-color);
    grid-column: 1/2;
    grid-row: 1/2;
    justify-self: center;
    text-transform: uppercase;
  }

  @media screen and (max-width: 900px) {
    img {
      aspect-ratio: 5/2;
    }

    h2 {
      font-size: 10vw;
    }
  }
</style>
